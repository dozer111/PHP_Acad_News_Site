<div id="display"></div>

    <script type="text/javascript">
        function mode() {
            $.ajax({
                url: '/test/index',
                success: function(data) {
                    $('#display').html(data);
                }
            });
        }

        var timeInterval = 1000;
        setInterval(mode, timeInterval);
    </script>







